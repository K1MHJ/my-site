---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";

export interface Props {
  title?: string;
}

const { title = "일상의 기록" } = Astro.props;

const rawBase = import.meta.env.BASE_URL ?? "/";
const base = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;
---

<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-header-inner">
        <a href={base} class="site-title">일상의 기록</a>
        <nav class="nav">
          <a href={base}>홈</a>
          <a href={`${base}tags/`}>태그</a>
          <ThemeToggle />
        </nav>
      </div>
    </header>

    <main>
      <div class="container layout">
        <div class="content">
          <slot />
        </div>
        <aside class="sidebar">
          <slot name="sidebar" />
        </aside>
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        © {new Date().getFullYear()} 일상의 기록
      </div>
    </footer>
  </body>
</html>
