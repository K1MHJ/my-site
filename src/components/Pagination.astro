---
type Props = {
  currentPage: number;
  totalPages: number;
  base: string;
};

const { currentPage, totalPages, base } = Astro.props;

// 페이지 번호 목록 생성 (현재 페이지 기준 앞뒤 1개씩)
const getPageNumbers = () => {
  const pages: (number | string)[] = [];
  const maxVisible = 7; // 최대 표시할 페이지 수
  
  if (totalPages <= maxVisible) {
    // 총 페이지가 적으면 모두 표시
    for (let i = 1; i <= totalPages; i++) {
      pages.push(i);
    }
  } else {
    const pageSet = new Set<number>();
    
    // 항상 첫 페이지 표시
    pageSet.add(1);
    
    // 현재 페이지 주변 범위 계산
    const start = Math.max(2, currentPage - 1);
    const end = Math.min(totalPages - 1, currentPage + 1);
    
    // 현재 페이지 주변 추가
    for (let i = start; i <= end; i++) {
      pageSet.add(i);
    }
    
    // 항상 마지막 페이지 추가
    if (totalPages > 1) {
      pageSet.add(totalPages);
    }
    
    // Set을 배열로 변환하고 정렬
    const sortedPages = Array.from(pageSet).sort((a, b) => a - b);
    
    // 배열을 순회하면서 생략 표시 추가
    for (let i = 0; i < sortedPages.length; i++) {
      const page = sortedPages[i];
      const prevPage = i > 0 ? sortedPages[i - 1] : 0;
      
      // 첫 페이지는 항상 추가
      if (page === 1) {
        pages.push(1);
      } else if (page - prevPage > 1) {
        // 간격이 2 이상이면 생략 표시
        pages.push('...');
        pages.push(page);
      } else {
        // 연속된 숫자는 바로 추가
        pages.push(page);
      }
    }
  }
  
  return pages;
};

const pageNumbers = getPageNumbers();

const getPageUrl = (page: number) => {
  if (page === 1) {
    return base;
  }
  return `${base}page/${page}/`;
};
---

<nav class="pagination" aria-label="페이지 네비게이션">
  <div class="pagination-controls">
    {currentPage > 1 && (
      <a href={getPageUrl(currentPage - 1)} class="pagination-btn pagination-btn-prev">
        ← 이전
      </a>
    )}
    {currentPage === 1 && (
      <span class="pagination-btn pagination-btn-prev pagination-btn-disabled">
        ← 이전
      </span>
    )}
  </div>

  <div class="pagination-numbers">
    {pageNumbers.map((page) => {
      if (typeof page === 'string') {
        return <span class="pagination-ellipsis">{page}</span>;
      }
      
      if (page === currentPage) {
        return (
          <span class="pagination-number pagination-number-current" aria-current="page">
            {page}
          </span>
        );
      }
      
      return (
        <a href={getPageUrl(page)} class="pagination-number">
          {page}
        </a>
      );
    })}
  </div>

  <div class="pagination-controls">
    {currentPage < totalPages && (
      <a href={getPageUrl(currentPage + 1)} class="pagination-btn pagination-btn-next">
        다음 →
      </a>
    )}
    {currentPage === totalPages && (
      <span class="pagination-btn pagination-btn-next pagination-btn-disabled">
        다음 →
      </span>
    )}
  </div>
</nav>

<style>
  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .pagination-controls {
    display: flex;
  }

  .pagination-numbers {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .pagination-btn,
  .pagination-number {
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #374151;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    transition: all 0.2s;
    font-size: 0.9rem;
  }

  .pagination-btn:hover:not(.pagination-btn-disabled),
  .pagination-number:hover {
    background: #f3f4f6;
    border-color: #d1d5db;
    text-decoration: none;
  }

  .pagination-number-current {
    background: #2563eb;
    color: #ffffff;
    border-color: #2563eb;
    font-weight: 600;
  }

  .pagination-btn-disabled {
    opacity: 0.5;
    cursor: not-allowed;
    background: #f9fafb;
  }

  .pagination-ellipsis {
    padding: 0.5rem 0.25rem;
    color: #9ca3af;
  }

  /* 다크 모드 */
  [data-theme="dark"] .pagination-btn,
  [data-theme="dark"] .pagination-number {
    color: #e5e7eb;
    background: #1f2937;
    border-color: #374151;
  }

  [data-theme="dark"] .pagination-btn:hover:not(.pagination-btn-disabled),
  [data-theme="dark"] .pagination-number:hover {
    background: #374151;
    border-color: #4b5563;
  }

  [data-theme="dark"] .pagination-btn-disabled {
    background: #1f2937;
  }

  [data-theme="dark"] .pagination-ellipsis {
    color: #6b7280;
  }

  @media (max-width: 640px) {
    .pagination {
      gap: 0.25rem;
    }

    .pagination-btn,
    .pagination-number {
      padding: 0.4rem 0.6rem;
      font-size: 0.85rem;
    }
  }
</style>

